<div class="container">  
  <div class="d-flex justify-content-center">
    <%= form_with url: update_current_user_path(@user), method: :patch, model: @user do |f|%>
      <div class="mb-3">
        <% if !@user.image.blank? %>
          <div class="d-flex justify-content-center mb-3 mt-3">
            <%= image_tag(@user.image, class: "profile_image")%>
          </div>
        <% end %>
        <div class="d-flex justify-content-center mb-3 mt-3">
          <%= f.file_field :image%>
        </div>
      </div>
      <div class="mb-3">
        <%= label_tag 'First name: ', nil, class: "form-label"%>
        <%= f.text_field :first_name, class: "form-control"%>
      </div>
      <div class="mb-3">
        <%= label_tag 'Last name: ', nil, class: "form-label"%>
        <%= f.text_field :last_name, class: "form-control"%>
      </div>
      <div>
        <%= label_tag 'Age: ', nil, class: "form-label"%>
        <%= f.number_field :age, class: "form-control"%>
      </div>
      
      <div class="d-flex justify-content-center mt-4">
        <%= submit_tag 'Update', class: "btn btn-dark" %>
      </div>
    <% end %>
  </div>
</div>